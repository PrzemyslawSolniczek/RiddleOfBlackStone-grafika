<Window x:Class="RiddleOfBlackStone.QuizPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RiddleOfBlackStone" 
      d:DataContext="{d:DesignInstance Type=viewModel:QuizViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuizPage">
    <Grid>
        <StackPanel>
            <Frame x:Name="mainFrame" />
            <TextBlock Text="{Binding Questions[0].Description}"/>
            <RadioButton Content="{Binding Questions[SelectedOption].Answers[0].Description}" IsChecked="{Binding IsOption0Selected, Mode=TwoWay}"/>
            <RadioButton Content="{Binding Questions[SelectedOption].Answers[1].Description}" IsChecked="{Binding IsOption1Selected, Mode=TwoWay}" />
            <RadioButton Content="{Binding Questions[SelectedOption].Answers[2].Description}" IsChecked="{Binding IsOption2Selected, Mode=TwoWay}" />
            <RadioButton Content="{Binding Questions[SelectedOption].Answers[3].Description}" IsChecked="{Binding IsOption3Selected, Mode=TwoWay}" />
            <Button Content="Next" Command="{Binding ShowNextQuestionCommand}" Width="50" Height="50" />
        </StackPanel>
    </Grid>
</Window>
