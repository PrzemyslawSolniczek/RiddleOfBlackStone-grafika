<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Your Game Title" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pictures/tlo.png" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu Header -->
        <TextBlock Text="Riddle of Black Stone" Foreground="#d2691e" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,56,0,338" Grid.Row="1" Width="222"/>

        <!-- Menu Items -->
        <ListBox Grid.Row="1" Name="menuListBox" Foreground="#b87333" Background="#2c1b01" FontSize="14" HorizontalAlignment="Center" SelectionChanged="MenuListBox_SelectionChanged" Margin="0,199,0,103" RenderTransformOrigin="0.487,0.539" Width="168">
            <ListBoxItem>Rozpocznij nową grę</ListBoxItem>
            <ListBoxItem>Odczytaj grę</ListBoxItem>
            <ListBoxItem>O autorach</ListBoxItem>
            <ListBoxItem>Opcje</ListBoxItem>
            <ListBoxItem>Wyjdź z gry</ListBoxItem>
        </ListBox>
    </Grid>
</Window>
