<Page x:Class="RiddleOfBlackStone.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:RiddleOfBlackStone"
      mc:Ignorable="d"
      Title="GamePage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Frame x:Name="mainFrame"/>
        <Image x:Name ="gameImage" Grid.Row="0" Margin="10"/>

        <ListBox Name="choiceListBox" ItemsSource="{Binding Choices}" SelectionChanged="choiceListBox_SelectionChanged" Grid.Row="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid Grid.Row="2">
            <TextBlock Text="{Binding CurrentScene.Description}" Margin="10"/>
        </Grid>
    </Grid>
</Page>