<Window x:Class="RiddleOfBlackStone.OptionsPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RiddleOfBlackStone"
        mc:Ignorable="d"
        Title="OptionsPanel" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Ustawienia" HorizontalAlignment="Center" Margin ="0,10,0,10"/>
            <CheckBox Content="Dźwięk" IsChecked="{Binding Music}" Margin="0,5,0,5"/>
            <CheckBox Content="Wygląd" IsChecked="{Binding DisplayTextLetterByLetter}" Margin="0,5,0,5"/>
            <Button Content="Zapisz" Click="SaveButton_Click" Margin="0,10,0,10"/>
        </StackPanel>
    </Grid>
</Window>
